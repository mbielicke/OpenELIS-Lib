<web-app>
 <display-name>Test Widgets Application v0.0</display-name>
 <description>Webapp to Test Widgets</description>
  
  <!-- Servlets -->

  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>org.openelis.gwt.server.ScreenControllerServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet>
   <servlet-name>remoteLoggingServlet</servlet-name>
   <servlet-class>com.google.gwt.logging.server.RemoteLoggingServiceImpl</servlet-class>
   <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/testwidgets/controller</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
   <servlet-name>remoteLoggingServlet</servlet-name>
   <url-pattern>/testwidgets/remote_logging</url-pattern>
 </servlet-mapping>
  
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <error-page>
    <error-code>404</error-code>
    <location>/.no_file.html</location>
  </error-page>     
 
  <listener>
    <listener-class>
      org.openelis.util.SessionManager
    </listener-class>
  </listener>
  
  <resource-ref>
    <res-ref-name>openELISJNDI</res-ref-name>
    <res-type>java.lang.String</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
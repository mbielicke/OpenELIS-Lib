<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateLocales="default"
             xmlns:shl="urn:import:org.openelis.gwt.widget"
             xmlns:cal="urn:import:org.openelis.gwt.widget.calendar">
      
      <ui:with field="res" type="org.openelis.gwt.resources.OpenELISResources"/>  
             
      <g:FocusPanel ui:field="CalFocus">
        <g:VerticalPanel styleName="{res.calendarui.CalendarWidget}">
          <!-- 
            <g:HorizontalPanel ui:field="TimeBar" styleName="{res.calendar.TimeBar}" width="100%" visible="false">
                <shl:TextBox ui:field="time" width="45px" />
            </g:HorizontalPanel>
           -->
          <g:HTMLPanel ui:field="monthBar" styleName="{res.calendarui.MonthBar}">
             <table>
                <tr>
                  <td>
                    <g:FocusPanel ui:field="prevMonth" styleName="{res.calendarui.PreviousMonth}"/>
                  </td>
				  <td align="center" style="width:100%;">
					<table>
					  <tr> 
					    <td>
                      	  <g:Label ui:field="monthDisplay" styleName="{res.calendarui.MonthDisplay}"/>
                      	</td>
                        <td>
            	      	  <g:FocusPanel ui:field="monthSelect" styleName="{res.calendarui.MonthSelect}"/>
            	      	</td>
            	     </tr>
            	    </table>
            	  </td>
                  <td>             
	                <g:FocusPanel ui:field="nextMonth" styleName="{res.calendarui.NextMonth}"/>
	              </td>
	            </tr>
	          </table>
          </g:HTMLPanel>
          <cal:CalendarTableUI ui:field="table"/>
        </g:VerticalPanel>
      </g:FocusPanel>

</ui:UiBinder>